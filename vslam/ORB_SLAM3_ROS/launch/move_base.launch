<launch>
  <!-- Arguments -->
  <arg name="model" default="$(env TURTLEBOT3_MODEL)" doc="model type [burger, waffle, waffle_pi]"/> <!-- For now -->
  <arg name="cmd_vel_topic" default="/cmd_vel" />
  <arg name="odom_topic" default="/vslam_stereo_inertial/Pose" /> <!-- The same -->
  <arg name="move_forward_only" default="false"/>

  <!-- move_base -->
  <node pkg="move_base_vslam" type="move_base" respawn="false" name="move_base" output="screen">
    <param name="base_local_planner" value="dwa_local_planner/DWAPlannerROS" /> <!-- Where we can find it? -->
    <rosparam file="$(find vslam)/ORB_SLAM3_ROS/params/costmap_common_params_$(arg model).yaml" command="load" ns="global_costmap" />
    <rosparam file="$(find vslam)/ORB_SLAM3_ROS/params/costmap_common_params_$(arg model).yaml" command="load" ns="local_costmap" />
    <rosparam file="$(find vslam)/ORB_SLAM3_ROS/params/local_costmap_params.yaml" command="load" />
    <rosparam file="$(find vslam)/ORB_SLAM3_ROS/params/global_costmap_params.yaml" command="load" />
    <rosparam file="$(find vslam)/ORB_SLAM3_ROS/params/move_base_params.yaml" command="load" />
    <rosparam file="$(find vslam)/ORB_SLAM3_ROS/params/dwa_local_planner_params_$(arg model).yaml" command="load" />
    <remap from="cmd_vel" to="$(arg cmd_vel_topic)"/>
    <remap from="odom" to="$(arg odom_topic)"/> <!-- The same -->
    <param name="DWAPlannerROS/min_vel_x" value="0.0" if="$(arg move_forward_only)" />
  </node>
</launch>
