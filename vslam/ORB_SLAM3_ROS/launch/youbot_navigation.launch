<launch>
  <!-- Arguments -->
  <arg name="model" default="$(env TURTLEBOT3_MODEL)" doc="model type [burger, waffle, waffle_pi]"/>
  <arg name="map_file" default="$(find vslam)/ORB_SLAM3_ROS/params/map.yaml"/> <!-- Replace by our map! -->
  <arg name="open_rviz" default="true"/>
  <arg name="move_forward_only" default="false"/>

  <!-- Youbot -->
  <!-- <include file="$(find vslam)/ORB_SLAM3_ROS/launch/youbot_remote.launch">
    <arg name="model" value="$(arg model)" />
  </include> -->

  <!-- Map server -->
  <node pkg="map_server" name="map_server" type="map_server" args="$(arg map_file)"/>

  <!-- AMCL -->
  <!-- <include file="$(find vslam)/ORB_SLAM3_ROS/launch/amcl.launch"/> -->

  <!-- move_base -->
  <include file="$(find vslam)/ORB_SLAM3_ROS/launch/move_base.launch">
    <arg name="model" value="$(arg model)" />
    <arg name="move_forward_only" value="$(arg move_forward_only)"/>
  </include>

  <!-- rviz -->
  <!-- <group if="$(arg open_rviz)"> 
    <node pkg="rviz" type="rviz" name="rviz" required="true"
          args="-d $(find midas_cpp)/rviz/orb_slam3_depth.rviz"/>
  </group> -->
</launch>
